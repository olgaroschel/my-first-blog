EXPECTED_BAKE_TIME=40

def bake_time_remaining(t1):
    bake_time_remaining = EXPECTED_BAKE_TIME - t1
    return bake_time_remaining

def preparation_time_in_minutes(prep):
    #lay is the number of layers added to the lasagna
    preparation_time_in_minutes = prep * 2
    return preparation_time_in_minutes
    
def elapsed_time_in_minutes(x,y):
     elapsed_time_in_minutes = bake_time_remaining(y) + preparation_time_in_minutes(x)
     return elapsed_time_in_minutes

print(elapsed_time_in_minutes(3,20))
print(elapsed_time_in_minutes(1,3))
